{
    "name": "xyu/heroku-wp",
    "description": "A template for installing and running WordPress on Heroku",
    "homepage": "https://github.com/xyu/heroku-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Xiao Yu",
            "email": "me@xyu.io",
            "homepage": "http://xyu.io",
            "role": "Developer"
        }
    ],
    "require": {
        "ext-gd": "*",
        "php": "7.*",
	"ext-apcu": "*",
	"ext-intl": "*",
	"ext-exif": "*",

        "ext-redis": "*",
        "ext-mbstring": "*",

        "wordpress/wordpress": "*",

        "wpackagist-plugin/rocket-lazy-load": "*",
        "wpackagist-plugin/secure-db-connection": "*",
        "wpackagist-plugin/redis-cache": "*",
        "wpackagist-plugin/wp-crontrol": "*",
        "wpackagist-plugin/block-bad-queries": "*",
        "wpackagist-plugin/wp-fastest-cache": "*",
        "wpackagist-plugin/advanced-database-cleaner": "*",
        "wpackagist-plugin/all-in-one-wp-security-and-firewall": "*",
        "wpackagist-plugin/wp-extended-search": "*",
        "wpackagist-plugin/classic-editor": "*",
        "wpackagist-plugin/ad-inserter": "*",
        "wpackagist-plugin/disable-comments": "*",
        "wpackagist-plugin/hide-metadata": "*",
        "wpackagist-plugin/wpforms-lite": "*",
        "wpackagist-plugin/database-for-wpforms": "*",
        "wpackagist-plugin/insert-headers-and-footers": "*",
        "wpackagist-plugin/w3-total-cache": "*",
        "wpackagist-plugin/age-gate": "*",
        "wpackagist-plugin/wp-migrate-db": "*",
        "wpackagist-plugin/pre-party-browser-hints": "*",
        "wpackagist-plugin/widget-shortcode": "*",
        "wpackagist-plugin/all-in-one-seo-pack": "*",
        "wpackagist-plugin/search-filter": "*",
        "wpackagist-plugin/recent-posts-widget-with-thumbnails": "*",
        "wpackagist-plugin/bradmax-player": "*",
        "wpackagist-plugin/featured-image-from-url": "*",

        "wpackagist-plugin/display-posts-shortcode": "*",

        "wpackagist-plugin/insert-php-code-snippet": "*",

        "wpackagist-plugin/pods": "*",



        "wpackagist-plugin/wp-scraper": "*",
        "wpackagist-plugin/wp-sheet-editor-bulk-spreadsheet-editor-for-posts-and-pages": "*",


        "wpackagist-theme/reblog": "*",




        "predis/predis": "~1",
        "wp-cli/wp-cli": "^2"
    },
    "suggest": {
        "wpackagist-plugin/cloudflare-cache-purge": "Purges cached pages on CF.",
        "trepmal/wp-revisions-cli": "WP CLI tool for cleaning up revisions (dev-master)"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wordpress/wordpress",
                "version": "5.7.2",
                "dist": {
                    "type": "zip",
                    "url": "https://wordpress.org/wordpress-5.7.2.zip"
                }
            }
        },
        {
            "type": "vcs",
            "url": "https://github.com/xyu/batcache"
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "https://wp-cli.org/package-index"
        }
    ],
    "extra": {
        "installer-paths": {
            "vendor/wordpress/wordpress-ext/wp-content/mu-plugins/{$name}/": [
                "wpackagist-plugin/redis-cache",
                "wpackagist-plugin/secure-db-connection"
            ],
            "vendor/wordpress/wordpress-ext/wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "vendor/wordpress/wordpress-ext/wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "./support/app_slug_compile.sh"
        ]
    }
}
